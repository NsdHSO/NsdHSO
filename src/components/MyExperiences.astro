---
import { MY_EXPERIENCES } from '../consts';
const myExperience = MY_EXPERIENCES;
---

<ul class="exp-container">
    {myExperience.map((item) => (
            <li class=" icon-exp" set:html={item.icon}></li>
    ))}
</ul>
<style>
    .exp-container {
        display: grid;
        grid-template-columns:repeat(auto-fit, minmax(300px, 1fr));
        justify-content: center;
        gap: .6rem;
        padding: 0;
    }

    .icon-exp {
        list-style: none;
        height: 10rem;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        box-shadow: rgba(0, 0, 0, 0.02) 0px 1px 3px 0px, rgba(27, 31, 35, 0.15) 0px 0px 0px 1px;
        border-radius: 1rem;
        position: relative;

        &:hover {
            backdrop-filter: blur(10px);
            background-color: rgb(255 255 255);
            cursor: pointer;
            border-radius: 1rem;
            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        }

        svg {
            width: calc(100% - 2rem);
            position: absolute;
            height: 100%;
        }
    }
</style>
