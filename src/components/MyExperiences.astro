---
import { MY_EXPERIENCES, OPEN_SOURCE } from '../consts';
const myExperience = MY_EXPERIENCES;
const myOpenSource = OPEN_SOURCE;
---
<section class="container">
    <section>
        <p>Daily Based</p>

        <ul class="exp-container">
            {myExperience.map((item) => (
                    <li class="icon-exp" id={item.slug}
                        transition:name={`hero-${item.slug}`}>

                        <a href={`/NsdHSO/blog/${item.slug}`} class="exp-link">
                            <div class="svg-inner" set:html={item.icon}/>
                        </a>
                    </li>
            ))}
        </ul>
    </section>
    <section class="open-source">
        <p>Free Time / Open source</p>
        <ul class="exp-container">
            {myOpenSource.map((item) => (
                    <li class="icon-exp" id={item.slug}
                        transition:name={`hero-${item.slug}`}>

                        <a href={`/NsdHSO/blog/${item.slug}`} class="exp-link">
                            <div class="svg-inner" set:html={item.icon}/>
                        </a>
                    </li>
            ))}
        </ul>
    </section>
</section>
<style>
    .container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
    }

    .exp-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        justify-content: center;
        gap: 1.5rem;
        padding: 0;
        margin: 2rem 0;
    }

    .icon-exp {
        list-style: none;
        height: 12rem;
        display: flex;
        align-items: center;
        justify-content: center;

        background-color: rgba(var(--gray-light), 0.1);
        border: 1px solid rgba(var(--gray), 0.1);
        box-shadow: var(--box-shadow);
        border-radius: 1rem;

        padding: 2rem;
        transition: all 0.3s ease;
        overflow: hidden;
    }

    .icon-exp:hover {
        cursor: pointer;
        transform: translateY(-5px);
        background-color: rgba(var(--gray-light), 0.2);
        border-color: var(--accent);
    }

    .icon-exp :global(svg) {
        position: static !important;
        width: 100% !important;
        height: 100% !important;

        object-fit: contain;

        transition: transform 0.3s ease;
    }

    .icon-exp:hover :global(svg) {
        transform: scale(1.1);
        filter: brightness(1);
    }

    /* Dark Mode: Ensure dark logos are visible */
    @media (prefers-color-scheme: dark) {
        .icon-exp {
            background-color: rgba(255, 255, 255, 0.03);
        }

        .icon-exp :global(svg) {
            filter: brightness(0) invert(1);
        }
    }
</style>
