---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'];

const {
    title,
    description,
    pubDate,
    updatedDate,
    heroImage
} = Astro.props;
---

<head>
    <BaseHead title={title} description={description}/>
    <style>

        article {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .hero-image, prose{
            width: inherit;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .prose{
            max-width: 720px;
        }
        main {
            mask-size: 100% 100%;
            mask-repeat: no-repeat;
            max-width: 100% !important;
        }

        .title {
            margin-bottom: 1em;
            padding: 1em 0;
            text-align: center;
            line-height: 1;
        }

        .title h1 {
            margin: 0 0 0.5em 0;
        }

        .date {
            margin-bottom: 0.5em;
            color: rgb(var(--gray));
        }

        .last-updated-on {
            font-style: italic;
        }

        /* --- New Scroll Animation Logic --- */

        @keyframes fade-out {
            to {
                opacity: 0;
            }
        }

        @media (prefers-reduced-motion: no-preference) {
            /* Fade out the title area as it exits the top of the viewport */
            .title {
                animation: fade-out linear forwards;
                animation-timeline: view();
                /* Start fading out 200px before the element begins to exit the top */
                animation-range: exit -200px;
            }

            /* Optional: Add a subtle fade and scale effect to the hero image */
            .hero-image img {
                animation: fade-out linear forwards;
                animation-timeline: view();
                animation-range: exit;
            }
        }
    </style>
</head>
<Header/>
<main>
    <article>
        <div class="hero-image">
            {heroImage && <img width={1020} height={510} src={heroImage} alt=""
                               transition:name={`hero-${Astro.params.slug}`}
                               />}
        </div>
        <div class="prose">
            <div class="title">
                <div class="date">
                    <FormattedDate date={pubDate}/>
                    {
                        updatedDate && (
                                    <div class="last-updated-on">
                                        Last updated on
                                        <FormattedDate date={updatedDate}/>
                                    </div>
                        )
                    }
                </div>
                <h1>{title}</h1>
                <p set:html={description}></p>
                <hr/>
            </div>
            <slot/>
        </div>
    </article>
</main>
<Footer/>
